<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FontableTextView">
        <attr name="font" format="string" />
    </declare-styleable>

    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="instruction_margins">48dp</dimen>
    <dimen name="splash_credit_fontsize">24dp</dimen>
    <dimen name="splash_margin_top">48dp</dimen>
    <dimen name="splash_title_height">166px</dimen>

    <string name="action_settings">Settings</string>
    <string name="app_name">TubeTastic</string>
    <string name="app_title">TubeTastic!</string>
    <string name="credit">by Rick Osborne</string>
    <string name="hello_world">Hello world!</string>
    <string name="high_score">High Score: %d</string>
    <string name="instructions">Start a new game:\nTap the square to align the tubes.</string>
    <string name="new_game">New Game</string>
    <string name="space"></string>
    <string name="title_activity_splash">TubeTastic!</string>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Font1Text">
        <item name="font">KiteOne-Regular</item>
    </style>

    <style name="FullScreenActivity" parent="AppTheme">
        <item name="android:background">#000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashCredit" parent="Font1Text">
        <item name="android:textColor">#444444</item>
    </style>

    <style name="SplashInst" parent="Font1Text">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SplashNewGame">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SplashScore" parent="Font1Text">
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
